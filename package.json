{
  "name": "mcp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist --extensions '.ts,.js'",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js}",
    "relay": "relay-compiler",
    "sync-schema": "scripts/sync-schema.sh",
    "sync-schema-local": "scripts/sync-schema-local.sh",
    "mcp-server": "yarn build && cp dist/mcp-server.js dist/mcp-server.cjs && node dist/mcp-server.cjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "core-js": "^3.44.0",
    "dotenv": "^17.2.1",
    "graphql": "^16.11.0",
    "jiti": "^2.5.1",
    "react-relay": "18.2.0",
    "react-relay-network-modern": "^6.2.2",
    "relay-runtime": "^18.2.0",
    "tslib": "^2.8.1",
    "typescript": "5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@types/react-relay": "18.2.0",
    "@types/relay-runtime": "^19.0.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-relay": "^20.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "relay-compiler": "^18.2.0",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
